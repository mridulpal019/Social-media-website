<link rel="stylesheet" href="<%= assetPath('css/user_sign_in.css')%>">
<div class="outer sign-up">
    <div class="sign sign-up-body">
            <h1>Create a New Account</h1>
            <form action="/users/create" method="post" id="create">
                
                <input type="text" name="name" placeholder="Name" required><br>    
                
                    <input type="email" name="email" placeholder="Email Address" required><br>
                    
                    <input type="password" name="password" placeholder="Password" required><br>
                    
                    <input type="password" name="confirm_password" placeholder="Confirm Password" required><br>

                    <button type="submit" form="create" value="Sign Up">Sign Up</button> <p>Already have an account !? <a href="/users/sign-in">Log In</a></p>
            </form>
            <p>
                <a href="/users/auth/google">google Sign In/sign up</a>
        </p> 
    </div>
</div>