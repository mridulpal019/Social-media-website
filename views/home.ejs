<link rel="stylesheet" href="/css/home.css">

<h1>Codieal/ <%=title%></h1>

<section id="feed-posts">
    <h4>Posts</h4>
    <% if (locals.user) {%>
    <form action="/posts/create" method="post" id="new-post-form">
        <textarea name="content"  cols="30" rows="5" placeholder="What's in your mind!! Share it with your friends "></textarea>
        <input type="submit" value="Post">
    </form>
 <%}%>
    <div id="posts-list-container">
        <ul>
            <% for (post of posts) {%>
           <li>
               <p>
               <%= post.content %>
               <br>
               <small><%= post.user.name %></small>
               
           
           <p></p>
            </li>
           </ul>

           
           
           
            <%}%>
        </ul>
    </div>
</section>
        
